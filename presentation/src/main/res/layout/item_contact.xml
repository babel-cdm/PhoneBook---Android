<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_marginBottom="@dimen/card_bottom_margin"
    android:background="@drawable/background_card"
    android:padding="@dimen/card_padding">

    <ImageView
        android:id="@+id/ivItemContactImage"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/match_constraint"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvItemContactName"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ivItemContactImage"
        app:layout_constraintEnd_toStartOf="@id/tvItemContactNumber"
        app:layout_constraintStart_toEndOf="@id/ivItemContactImage"
        app:layout_constraintTop_toTopOf="@id/ivItemContactImage"
        tools:text="Name Surname" />

    <TextView
        android:id="@+id/tvItemContactNumber"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/ivItemContactImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvItemContactName"
        app:layout_constraintTop_toTopOf="@id/ivItemContactImage"
        tools:text="666666666" />

</androidx.constraintlayout.widget.ConstraintLayout>